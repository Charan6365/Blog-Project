<div class="author">
    <h1 class="author_heading">Hi, I am Satyacharan.</h1>
    <p class="author_body">Web Developer and College Student</p>
</div>

<img src="/img/hero-img.jpg" alt="person looking out of the window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Photos</h2>

    <ul class="article-ul">
    <% data.forEach(post => {%>
        <li>
            <a href="/post/<%=post._id%>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
    <% }); %>       
    </ul>

</section>